extends layout

block content
    form(method="POST", action="/articles/edit/"+article._id)
        .form-group
            label Имя студента:
            input.form-control(type="text", name="title", value=article.title)
        .form-group
            label Группа студента:
            input.form-control(type="text", name="author", value=article.author)
        .form-group
            label Средний бал студента:
            input.form-control(type="text", name="body", value=article.body)
        input.btn-primary(type="submit", value="Изменить")
